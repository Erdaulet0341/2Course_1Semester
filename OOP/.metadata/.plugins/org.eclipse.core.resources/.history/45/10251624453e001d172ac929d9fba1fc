package Problem5;

public class DragonLunch {
	public String s = "";
	public int cnt = 0;
	String kidnap() {
		for(Person i: Person.person) {
			if(i.gender == Gender.B) {
				s+="B";
			}
			else {
				s+="G";
			}
		}
		return s;
	
	}
	boolean WillDragonEatOrNot(){
		int i=0, j=1;
		int length = s.length()*2;
		boolean b = true; 
		while(b) {
			System.out.println(1);
			if (s.charAt(i) == 'B' && s.charAt(j)=='G') {
				s.replace("B", "");
				s.replace("B", "");
				i = 0; 
				cnt++;
			}
			else if (i == length) {
				b = false;
			}
			else {
				i++;
				j++;
			}
		}
		if(b==true) return true;
		else return false;
	}
}
